<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	
	<context-param>
        <param-name>Database.DriverClass</param-name>
    	<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>
	
	<context-param>
	    <param-name>Database.Uri</param-name>
	    <param-value>jdbc:mysql://localhost/vihuela?user=root&amp;password=12345</param-value>
	</context-param>

	
	
	<listener>
		<listener-class>vihuela.web.DbcpManagerListener</listener-class>
	</listener>
	
	
	
    <servlet>
        <servlet-name>BooksServlet</servlet-name>
        <servlet-class>vihuela.web.BooksServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>AuthorsServlet</servlet-name>
        <servlet-class>vihuela.web.AuthorsServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ChaptersServlet</servlet-name>
        <servlet-class>vihuela.web.ChaptersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TypesServlet</servlet-name>
        <servlet-class>vihuela.web.TypesServlet</servlet-class>
    </servlet>
        
    <servlet>
        <servlet-name>ItemsServlet</servlet-name>
        <servlet-class>vihuela.web.ItemsServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>PagesServlet</servlet-name>
        <servlet-class>vihuela.web.PagesServlet</servlet-class>
    </servlet>
        
        
        
    <servlet-mapping>
    	<servlet-name>BooksServlet</servlet-name>
    	<url-pattern>/Books</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>AuthorsServlet</servlet-name>
      <url-pattern>/Authors</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>ChaptersServlet</servlet-name>
      <url-pattern>/Chapters</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>TypesServlet</servlet-name>
      <url-pattern>/Types</url-pattern>
    </servlet-mapping>
        
    <servlet-mapping>
    	<servlet-name>ItemsServlet</servlet-name>
    	<url-pattern>/Items</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
    	<servlet-name>PagesServlet</servlet-name>
    	<url-pattern>/Pages</url-pattern>
    </servlet-mapping>

</web-app>